<%include ./partials/header.ejs %>
    <div class="container d-flex p-2">
      <form class="row g-3" action="/createPost" method="post" enctype="multipart/form-data">
        <h1 style="color: black;">Create post</h1>
        <div class="col-12">
          <label for="inputEmail4" class="form-label">Image</label>
          <input name="content" type="file" class="form-control" id="inputEmail4">
        </div>
        <div class="col-12">
          <label for="inputPassword4" class="form-label">Caption</label>
          <input name="desc" type="text" class="form-control" placeholder="Caption" id="inputPassword4">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-dark">Post</button>
        </div>
      </form>
    </div>
    <br>
    <h1 style="color: black;">My Photos</h1>
    <% if(foundUser.posts){ %>
      <% foundUser.posts.forEach(function(elem){ %>
       <br>
       <div class="border">
         <div class="text-center">
           <p><strong><%= foundUser.username %> </strong><i> uploaded a post.</i></p>
           <% if(elem.content){%>
             <img src="/images/uploads/<%= elem.content %>" class="figure-img img-fluid rounded img-thumbnail">
           <% }%>
             <p><%= elem.desc %></p>
             <button class="rounded-3" style="text-decoration: none;"><a href="/likes/<%= elem._id %>"><%= elem.likes.length %> Likes</a></button>
             <br><br>
          </div>
       </div><br>
       <% }) %>
   <% } else { %>
           <h1>Oops !! No items here.</h1>
          <a href="/createpost">Upload your photo!</a>
   <% } %>
  
    